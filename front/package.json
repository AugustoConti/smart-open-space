{
  "name": "smart-open-space",
  "version": "1.0.0",
  "description": "Smart Open Space",
  "main": "index.js",
  "keywords": [],
  "private": true,
  "author": "Augusto Conti <augustoconti10@gmail.com> (https://github.com/AugustoConti)",
  "license": "GPL-3.0",
  "homepage": "https://github.com/AugustoConti/smart-open-space#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/AugustoConti/smart-open-space.git",
    "directory": "front"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "test": "jest",
    "start": "serve -s dist",
    "watch": "parcel src/index.html --open",
    "clean": "rm -rf dist/*",
    "heroku-postbuild": "parcel build src/index.html"
  },
  "devDependencies": {
    "@babel/core": "^7.6.3",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@testing-library/react": "^9.3.0",
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^9.4.2",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "grommet": "^2.7.9",
    "grommet-icons": "^4.3.0",
    "parcel-bundler": "^1.12.4",
    "prop-types": "^15.7.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-router-dom": "^5.1.2",
    "react-slick": "^0.25.2",
    "react-toastify": "^5.3.2",
    "serve": "^11.2.0",
    "slick-carousel": "^1.8.1",
    "styled-components": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "alias": {
    "#root": "./src",
    "#assets": "./src/assets",
    "#components": "./src/components",
    "#helpers": "./src/helpers",
    "#shared": "./src/components/shared"
  },
  "jest": {
    "transform": {
      ".+\\.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "#assets(.*)$": "<rootDir>/src/assets/$1",
      "#components(.*)$": "<rootDir>/src/components/$1",
      "#helpers(.*)$": "<rootDir>/src/helpers/$1",
      "#shared(.*)$": "<rootDir>/src/components/shared/$1",
      "^.+.(css|styl|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ]
  }
}
